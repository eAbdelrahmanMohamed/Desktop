<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/phonenum"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editTextPhone"/>
        <TextView
                android:text="password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/ps"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nt" android:layout_weight="1"/>
            <Button
                    android:text="close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/cls" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>