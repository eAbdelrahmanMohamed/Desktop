<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ATask">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="@string/app_name"
                android:ems="10"
                android:id="@+id/t1"/>
        <Button
                android:text="@string/dowload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button3"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="334dp" app:srcCompat="@drawable/ic_launcher_foreground"
                android:id="@+id/imageView" android:contentDescription="@string/dowloadimage"/>
    </LinearLayout>
</RelativeLayout>