<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num1" android:background="@color/white"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num2"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/result"
            android:background="@color/design_default_color_secondary"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="   +"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/plus" android:layout_weight="1"
                app:backgroundTint="@color/black"/>
        <Button
                android:text=" -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/minus" android:layout_weight="1"
                app:backgroundTint="@color/black"/>
        <Button
                android:text=" x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Multiply" android:layout_weight="1"
                app:backgroundTint="@color/black"/>
        <Button
                android:text="  \"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Divide" android:layout_weight="1"
                app:backgroundTint="@color/black"/>
    </LinearLayout>
</LinearLayout>