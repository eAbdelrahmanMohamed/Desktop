<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/next" android:layout_weight="1"/>
        <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:name="com.example.app.fragment1" android:id="@+id/fragment"
                android:layout_weight="1"/>
        <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:name="com.example.app.fragment2"
                android:id="@+id/fragment2" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>